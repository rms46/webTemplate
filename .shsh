function mkidx {
    cd $1
    printf -- '---\nlayout: "urls"\n---\n'      >  index.md
    for II in $(ls) ; do
        [ "$II" == "index.md" ] && continue
        [ -f $II ] && echo "* [$II]($II)"       >> index.md
        [ -d $II ] && echo "* [$II]($II/)"      >> index.md
        [ -d $II ] && $(mkidx $II)
    done

    cd ..
}

README="00-README-ls-alR"
ls -R > ${README}.txt

cat > index.md << NNNN
---
layout: "urls"
---
NNNN

for II in \
    ${README}.txt \
    TMP           \
; do
    [ -f $II ] && echo "* [$II]($II)"   >> index.md
    [ -d $II ] && echo "* [$II]($II/)"  >> index.md
    [ -d $II ] && mkidx $II
done

exit 0

